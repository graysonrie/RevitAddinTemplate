<UserControl x:Class="RealRevitPlugin.WpfWindow.ApplicationLogic.Controls.ChromeButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:RealRevitPlugin.WpfWindow.ApplicationLogic.Controls"
             mc:Ignorable="d"
             Height="32" Width="46">
    <UserControl.Resources>
        <Style x:Key="ChromeButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E5E5E5"/>
                                <Setter Property="Foreground" Value="#000000"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#CCCCCC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Button x:Name="PART_Button"
            Style="{StaticResource ChromeButtonStyle}"
            Click="OnButtonClick">
        <Path x:Name="PART_Icon"
              Data="{Binding IconGeometry, RelativeSource={RelativeSource AncestorType=UserControl}}"
              Fill="{Binding Foreground, ElementName=PART_Button}"
              Width="10"
              Height="10"
              Stretch="Uniform"/>
    </Button>
</UserControl>
