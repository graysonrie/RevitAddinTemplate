<Window x:Class="RealRevitPlugin.WpfWindow.ApplicationLogic.RevitWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:RealRevitPlugin.WpfWindow.ApplicationLogic.Controls"
        Title="My Revit WPF Window"
        Height="200"
        Width="300"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="White"
        ResizeMode="CanResizeWithGrip">

    <WindowChrome.WindowChrome>
        <WindowChrome
            CaptionHeight="32"
            ResizeBorderThickness="5"
            GlassFrameThickness="0"
            CornerRadius="0"
            UseAeroCaptionButtons="False"/>
    </WindowChrome.WindowChrome>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Custom Title Bar -->
        <Grid Grid.Row="0" Background="#F0F0F0" MouseLeftButtonDown="OnTitleBarMouseLeftButtonDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Window Icon -->
            <Image Grid.Column="0"
                   Source="pack://application:,,,/RealRevitPlugin;component/Resources/icon.png"
                   Width="16" Height="16"
                   Margin="8,0,0,0"
                   VerticalAlignment="Center"/>

            <!-- Window Title -->
            <TextBlock Grid.Column="1"
                       Text="{Binding Title, RelativeSource={RelativeSource AncestorType=Window}}"
                       Margin="8,0,0,0"
                       VerticalAlignment="Center"/>

            <!-- Window Buttons -->
            <controls:ChromeButton Grid.Column="2" ButtonType="Minimize"/>
            <controls:ChromeButton Grid.Column="3" ButtonType="Maximize"/>
            <controls:ChromeButton Grid.Column="4" ButtonType="Close"/>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="10">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="View Type Explorer"
                          Margin="0,0,0,10"
                          FontSize="16"
                          FontWeight="SemiBold"/>
                <Button Content="Get View Types"
                        Click="Button_Click"
                        Padding="15,8"
                        Background="#0078D4"
                        Foreground="White"
                        BorderThickness="0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>